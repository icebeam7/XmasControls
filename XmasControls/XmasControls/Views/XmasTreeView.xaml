<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XmasControls.Views.XmasTreeView">
    <ContentPage.Content>
        <AbsoluteLayout Margin="10">
            <Polygon Points="100,0 0,100 200,100"
                     Stroke="Green"
                     Fill="Green"/>
            
            <Polygon Points="100,50 0,150 200,150"
                     Stroke="Green"
                     Fill="Green"/>

            <Polygon Points="100,100 0,200 200,200"
                     Stroke="Green"
                     Fill="Green"/>

            <Polygon Points="80,200 120,200 120,300 80,300"
                     Stroke="Brown"
                     Fill="Brown"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>